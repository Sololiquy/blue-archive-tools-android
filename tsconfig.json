{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "strict": true,
      "baseUrl": ".",
      "paths": {
         "@app/*": ["app/*"],
         "@api/*": ["api/*"],
         "@utils/*": ["utils/*"],
         "@components/*": ["components/*"],
         "@/*": ["./*"]
      }
   },
   "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
